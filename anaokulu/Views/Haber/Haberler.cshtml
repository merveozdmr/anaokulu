
@{
    ViewBag.Title = "Haberler";
}
@using anaokulu.Models
@model List<Haber>
<div class="page-content">
    <div class="container">
        <div class="portlet light portlet-fit ">
            <div class="portlet-title">
                <div class="caption">
                    <i class="icon-microphone font-dark hide"></i>
                    <span class="caption-subject bold font-dark uppercase"> Haberler</span>
                    <span class="caption-helper">Bizden haberler...</span>
                </div>
            </div>
            <div class="portlet-body">
                <div class="row">
                    @foreach (Haber hbr in Model)
                    {
                        <div class="col-md-4">
                            <div class="mt-widget-3">
                                <div class="mt-head bg-yellow">
                                    <div class="mt-head-icon">
                                        <i class=" icon-graduation"></i>
                                    </div>
                                    <div class="mt-head-desc"> @hbr.baslik </div>
                                    <span class="mt-head-date"> @String.Format("{0:dd/MM/yyyy}", hbr.tarih) </span>
                                    <div class="mt-head-button">
                                        <a href="/Haber/HaberDetay/@hbr.haberID" type="button" class="btn btn-circle btn-outline white btn-sm">DETAY</a>
                                    </div>
                                </div>
                                <div class="mt-body-actions-icons">
                                    <div class="btn-group btn-group btn-group-justified">
                                        <a href="/EtkinlikResim/EtkinliklerimizResim/@hbr.haberID" class="btn ">
                                            <span class="mt-icon">
                                                <i class="glyphicon glyphicon-camera"></i>
                                            </span>PHOTO
                                        </a>

                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                   
                </div>
            </div>
        </div>
    </div>
</div>

