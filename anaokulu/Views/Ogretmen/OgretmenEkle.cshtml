
@{
    ViewBag.Title = "OgretmenEkle";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}



@using anaokulu.Models

<div class="tab-pane active" id="tab_0">
    <div class="portlet light ">
        <div class="portlet-title">

            <div class="caption">
                <i class="fa fa-female"></i>OĞRETMEN EKLE
            </div>

        </div>
        <div class="portlet-body form">
            <!-- BEGIN FORM-->

            <form action="/Ogretmen/OgretmenEkle" class="form-horizontal" method="post" role="form">
                <div class="form-body">
                    <div class="form-group">
                        <label class="col-md-3 control-label">
                            AD
                            <span class="required" aria-required="true">*</span>
                        </label>
                        <div class="col-md-4">
                            <input type="text" name="ad" class="form-control" placeholder="Adınızı Giriniz" aria-required="true" aria-describedby="error">

                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">SOYAD<span class="required" aria-required="true">*</span></label>
                        <div class="col-md-4">
                            <input type="text" name="soyad" class="form-control" placeholder="Soyadınızı Giriniz">

                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">E-MAİL<span class="required" aria-required="true">*</span></label>
                        <div class="col-md-4">
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <i class="fa fa-envelope font-purple"></i>
                                </span>
                                <input type="email" name="eposta" class="form-control" placeholder="E-Mail Giriniz">
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">ŞİFRE<span class="required" aria-required="true">*</span></label>
                        <div class="col-md-4">
                            <div class="input-group">
                                <input type="password" name="sifre" class="form-control" placeholder="Şifre Giriniz">
                                <span class="input-group-addon">
                                    <i class="fa fa-user font-purple"></i>
                                </span>
                            </div>
                        </div>
                    </div>


                    <div class="form-group">
                        <label class="col-md-3 control-label">BRANŞ<span class="required" aria-required="true">*</span></label>
                        <div class="col-md-4">
                            <input type="text" name="brans" class="form-control" placeholder="Branş Giriniz">

                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-3 control-label">TANIM<span class="required" aria-required="true">*</span></label>
                        <div class="col-md-4">
                            <textarea type="text" cols="5" name="tanim" class="form-control" placeholder="Tanım Giriniz"></textarea>

                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-3 control-label">KAYIT TARİHİ<span class="required" aria-required="true">*</span></label>
                        <div class="col-md-4">
                            @Html.TextBox("ogretmenID", DateTimeOffset.Now.ToString("dd-MMM-yyyy"), new { @Class = "form-control", @Name = "kayitTarih" })
                            @*@Html.DropDownList("yetkiID", (SelectList)ViewBag.Yetki, "Yetki Seçiniz", new { @class = "form-control" })*@

                        </div>
                    </div>


