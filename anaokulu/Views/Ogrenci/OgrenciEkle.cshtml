
@{
    ViewBag.Title = "OgrenciEkle";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}



@using anaokulu.Models

@section head{

    <link href="/Content/Tema/assets/global/plugins/bootstrap-datepicker/css/bootstrap-datepicker3.min.css" rel="stylesheet" type="text/css" />
}

<div class="tab-pane active" id="tab_0">
    <div class="portlet light ">
        <div class="portlet-title">
            <div class="caption">
                <i class="fa fa-child"></i>ÖĞRENCİ EKLE
            </div>

        </div>
        <div class="portlet-body form">
            <!-- BEGIN FORM-->
            <form action="/Ogrenci/OgrenciEkle" class="form-horizontal" method="post" role="form">
                <div class="form-body">
                    <div class="form-group">
                        <label class="col-md-3 control-label">
                            AD
                            <span class="required" aria-required="true">*</span>
                        </label>
                        <div class="col-md-4">
                            <input type="text" name="ad" class="form-control" placeholder="Adınızı Giriniz" aria-required="true" aria-describedby="error">
                            @*<span class="help-block"> bu alanın doldurulması zorunludur! </span>*@
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">SOYAD<span class="required" aria-required="true">*</span></label>
                        <div class="col-md-4">
                            <input type="text" name="soyad" class="form-control" placeholder="Soyadınızı Giriniz">
                            @*<span class="help-block"> A block of help text. </span>*@
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">DOĞUM TARİHİ<span class="required" aria-required="true">*</span></label>
                        <div class="col-md-4">
                            <input type="text" name="dogumTarihi" class="form-control" placeholder="Tarih Giriniz">

                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label" for="form_control_1">CİNSİYET<span class="required" aria-required="true">*</span></label>
                        <div class="col-md-9">
                            <div class="md-radio-list">
                                <div class="md-radio">
                                    @*<input type="radio" id="checkbox1_6" name="radio1" value="1" class="md-radiobtn">*@
                                    <label class="mt-radio">
                                        Kadın
                                        <input type="radio" value="kadın" name="cinsiyet" />
                                        <span></span>
                                    </label>
                                </div>
                                <div class="md-radio">
                                    @*<input type="radio" id="checkbox1_7" name="radio1" value="2" class="md-radiobtn">*@
                                    <label class="mt-radio">
                                        Erkek
                                        <input type="radio" value="erkek" name="cinsiyet" />
                                        <span></span>
                                    </label>
                                </div>

                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-3 control-label">SINIF<span class="required" aria-required="true">*</span></label>
                        <div class="col-md-4">
                            @*<div class="select-height">*@

                            <select class="form-control" name="sinifID">

                                @foreach (Sinif s in ViewBag.Sinif)
                                {
                                    <option value="@s.sinifID">@s.ad</option>

                                }

                            </select>

                            @*</div>*@
                        </div>
                    </div>

                </div>
                <div class="form-actions">
                    <div class="row">
                        <div class="col-md-offset-3 col-md-9">
                            <button type="submit" class="btn btn-circle green">EKLE</button>
                            <a href="/Ogrenci/Index" class="btn btn-circle grey-salsa btn-outline">İPTAL</a>
                        </div>
                    </div>
                </div>
            </form>
            <!-- END FORM-->
        </div>
    </div>
</div>


@section scripts{
    <script src="/Content/Tema/assets/global/plugins/bootstrap-datepicker/js/bootstrap-datepicker.min.js" type="text/javascript"></script>

}

