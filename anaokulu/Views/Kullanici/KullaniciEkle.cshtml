
@{
    ViewBag.Title = "KullaniciEkle";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}


@using anaokulu.Models

<div class="tab-pane active" id="tab_0">
    <div class="portlet light ">
        <div class="portlet-title">
            <div class="caption">
                <i class="fa fa-user"></i>KULLANICI EKLE
            </div>

        </div>
        <div class="portlet-body form">
            <!-- BEGIN FORM-->
            <form action="/Kullanici/KullaniciEkle" class="form-horizontal" enctype="multipart/form-data" method="post" role="form">
                <div class="form-body">
                    <div class="form-group">
                        <label class="col-md-3 control-label">
                            AD
                            <span class="required" aria-required="true">*</span>
                        </label>
                        <div class="col-md-4">
                            <input type="text" name="ad" class="form-control" placeholder="Adınızı Giriniz" aria-required="true" aria-describedby="error">
                            @*<span class="help-block"> bu alanın doldurulması zorunludur! </span>*@
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">SOYAD<span class="required" aria-required="true">*</span></label>
                        <div class="col-md-4">
                            <input type="text" name="soyad" class="form-control" placeholder="Soyadınızı Giriniz">
                            @*<span class="help-block"> A block of help text. </span>*@
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">E-MAİL<span class="required" aria-required="true">*</span></label>
                        <div class="col-md-4">
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <i class="fa fa-envelope font-purple"></i>
                                </span>
                                <input type="email" name="eposta" class="form-control" placeholder="E-Mail Giriniz">
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">ŞİFRE<span class="required" aria-required="true">*</span></label>
                        <div class="col-md-4">
                            <div class="input-group">
                                <input type="password" name="sifre" class="form-control" placeholder="Şifre Giriniz">
                                <span class="input-group-addon">
                                    <i class="fa fa-user font-purple"></i>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">RESİM<span class="required" aria-required="true">*</span></label>
                        <div class="col-md-4">
                            <input type="file" name="resimGelen" id="exampleInputFile1">
                            @*<span class="help-block"> A block of help text. </span>*@
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">Yetki<span class="required" aria-required="true">*</span></label>
                        <div class="col-md-4">
                            @*<div class="select-height">*@

                            <select class="form-control" name="yetkiID">

                                @foreach (Yetki y in ViewBag.Yetki)
                                {
                                    <option value="@y.yetkiID">@y.ad</option>

                                }

                            </select>

                            @*</div>*@
                        </div>
                    </div>

                </div>
                <div class="form-actions">
                    <div class="row">
                        <div class="col-md-offset-3 col-md-9">
                            <button type="submit" class="btn btn-circle green">EKLE</button>
                            <a href="/Kullanici/Index" class="btn btn-circle grey-salsa btn-outline">İPTAL</a>

                        </div>
                    </div>
                </div>
            </form>
            <!-- END FORM-->
        </div>
    </div>






</div>



