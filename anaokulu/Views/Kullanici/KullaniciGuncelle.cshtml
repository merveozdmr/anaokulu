
@{
    ViewBag.Title = "KullaniciGuncelle";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}



@using anaokulu.Models

<div class="tab-pane active" id="tab_0">
    <div class="portlet light ">
        <div class="portlet-title">
            <div class="caption">
                <i class="fa fa-user"></i>KULLANICI GÜNCELLE
            </div>

        </div>

        <div class="portlet-body form">
            <!-- BEGIN FORM-->
            <form action="/Kullanici/KullaniciGuncelle" class="form-horizontal" method="post" role="form">
                <input type="hidden" name="kullaniciID" value="@Model.kullaniciID" />
                <div class="form-body">
                    <div class="form-group">
                        <label class="col-md-3 control-label">
                            AD
                            <span class="required" aria-required="true">*</span>
                        </label>
                        <div class="col-md-4">
                            <input type="text" name="ad" class="form-control" value="@Model.ad" aria-required="true" aria-describedby="error">

                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">SOYAD<span class="required" aria-required="true">*</span></label>
                        <div class="col-md-4">
                            <input type="text" name="soyad" value="@Model.soyad" class="form-control">

                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">E-MAİL<span class="required" aria-required="true">*</span></label>
                        <div class="col-md-4">
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <i class="fa fa-envelope font-purple"></i>
                                </span>
                                <input type="email" name="eposta" value="@Model.eposta" class="form-control">
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">ŞİFRE<span class="required" aria-required="true">*</span></label>
                        <div class="col-md-4">
                            <div class="input-group">
                                <input type="password" name="sifre" value="@Model.sifre" class="form-control">
                                <span class="input-group-addon">
                                    <i class="fa fa-user font-purple"></i>
                                </span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-3 control-label">Yetki<span class="required" aria-required="true">*</span></label>
                        <div class="col-md-4">
                            @*<div class="select-height">*@
                            @Html.DropDownList("yetkiID", (SelectList)ViewBag.Yetki, "Yetki Seçiniz", new { @class = "form-control" })
                            @*<select class="form-control" name="yetkiID">

                                    @foreach (Yetki y in ViewBag.Yetki)
                                    {
                                        <option value="@y.yetkiID">@y.ad</option>

                                    }

                                </select>*@

                            @*</div>*@
                        </div>
                    </div>

                </div>
                <div class="form-actions">
                    <div class="row">
                        <div class="col-md-offset-3 col-md-9">
                            <button type="submit" class="btn btn-circle green">GÜNCELLE</button>

                            <a href="/Kullanici/Index" class="btn btn-circle grey-salsa btn-outline">İPTAL</a>
                        </div>
                    </div>
                </div>
            </form>
            <!-- END FORM-->
        </div>

    </div>
</div>







