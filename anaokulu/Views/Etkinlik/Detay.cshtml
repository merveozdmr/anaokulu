
@{
    ViewBag.Title = "Detay";
}
@using anaokulu.Models
@model List<Etkinlik>
<div class="page-content">
    <div class="container">
        <div class="col-md-12">
            <!-- BEGIN PORTLET-->
            <div class="portlet light ">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="icon-edit font-dark"></i>
                        <span class="caption-subject font-dark bold uppercase">Etkinlik Detayları</span>
                    </div>

                </div>
                @foreach (Etkinlik etk in Model) {
                <div class="portlet-body">
                    <div class="alert alert-danger">
                        <strong>Etkinlik Yeri :</strong> İlk Adım Anaokulu
                        <br />
                        <strong>Etkinlik Tarihi :</strong> @String.Format("{0:dd/MM/yyyy}", etk.tarih)
                    </div>
                    <div class="note note-danger">
                        <h4 class="block">@etk.ad</h4>
                        <p>@etk.aciklama</p>
                    </div>

                </div>
                }
            </div>

            <!-- END THUMBNAILS PORTLET-->
        </div>
    </div>
</div>
